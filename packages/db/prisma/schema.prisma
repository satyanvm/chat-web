
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String      @id              @default(uuid())
  username        String        @unique
  password        String
  // rooms           Room[]
  chats           Chat[]
}

